<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:FirstMauiApp.Pages"
             x:Class="FirstMauiApp.Pages.WebPage"
             Title="WebPage">

    <VerticalStackLayout
        Padding="30,0"
        Spacing="25">

        <VerticalStackLayout>

            <Button
                Text="Go"
                Clicked="NavigateToPage" />

            <Entry
                x:Name="urlEntry" />

        </VerticalStackLayout>

        <WebView
            x:Name="webView"
            Source="https://skillfactory.ru/"
            Navigated="OnWebViewNavigated" />
<!--
HeightRequest="400"
WidthRequest="600"
-->

    </VerticalStackLayout>

</ContentPage>
